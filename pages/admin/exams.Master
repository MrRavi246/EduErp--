                                            <option value="Assignment 1">Assignment 1</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Subject</label>
                                        <input type="text" class="form-control" id="resultSubject" required>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Marks Obtained</label>
                                        <input type="number" class="form-control" id="marksObtained" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Total Marks</label>
                                        <input type="number" class="form-control" id="totalMarksResult" required>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Grade</label>
                                        <select class="form-select" id="resultGrade" required>
                                            <option value="">Select Grade</option>
                                            <option value="A">A (90-100)</option>
                                            <option value="B">B (80-89)</option>
                                            <option value="C">C (70-79)</option>
                                            <option value="D">D (60-69)</option>
                                            <option value="F">F (Below 60)</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Result Date</label>
                                        <input type="date" class="form-control" id="resultDate" required>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Remarks</label>
                                    <textarea class="form-control" id="resultRemarks" rows="2"></textarea>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" onclick="addResult()">Add Result</button>
                        </div>
                    </div>
                </div>
            </div>

        </asp:ContentPlaceHolder>
        <asp:ContentPlaceHolder ID="ContentPlaceHolder3" runat="server">
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <script>
                // Sample data
                const results = [
                    {
                        id: 1,
                        rollNo: "CS001",
                        studentName: "John Doe",
                        exam: "Midterm Exam",
                        subject: "Data Structures",
                        marks: 85,
                        totalMarks: 100,
                        grade: "A",
                        date: "2024-01-15",
                        department: "Computer Science"
                    },
                    {
                        id: 2,
                        rollNo: "CS002",
                        studentName: "Jane Smith",
                        exam: "Final Exam",
                        subject: "Algorithms",
                        marks: 92,
                        totalMarks: 100,
                        grade: "A",
                        date: "2024-01-20",
                        department: "Computer Science"
                    },
                    {
                        id: 3,
                        rollNo: "EE001",
                        studentName: "Mike Johnson",
                        exam: "Quiz 1",
                        subject: "Circuit Theory",
                        marks: 78,
                        totalMarks: 100,
                        grade: "B",
                        date: "2024-01-18",
                        department: "Electrical"
                    },
                    {
                        id: 4,
                        rollNo: "ME001",
                        studentName: "Sarah Wilson",
                        exam: "Assignment 1",
                        subject: "Thermodynamics",
                        marks: 88,
                        totalMarks: 100,
                        grade: "A",
                        date: "2024-01-22",
                        department: "Mechanical"
                    },
                    {
                        id: 5,
                        rollNo: "CS003",
                        studentName: "Alex Brown",
                        exam: "Midterm Exam",
                        subject: "Database Systems",
                        marks: 65,
                        totalMarks: 100,
                        grade: "C",
                        date: "2024-01-16",
                        department: "Computer Science"
                    },
                    {
                        id: 6,
                        rollNo: "CE001",
                        studentName: "Emily Davis",
                        exam: "Final Exam",
                        subject: "Structural Analysis",
                        marks: 95,
                        totalMarks: 100,
                        grade: "A",
                        date: "2024-01-25",
                        department: "Civil"
                    }
                ];

                const exams = [
                    {
                        id: 1,
                        name: "Midterm Exam",
                        type: "Midterm",
                        subject: "Data Structures",
                        department: "Computer Science",
                        totalMarks: 100,
                        date: "2024-01-15"
                    },
                    {
                        id: 2,
                        name: "Final Exam",
                        type: "Final",
                        subject: "Algorithms",
                        department: "Computer Science",
                        totalMarks: 100,
                        date: "2024-01-20"
                    },
                    {
                        id: 3,
                        name: "Quiz 1",
                        type: "Quiz",
                        subject: "Circuit Theory",
                        department: "Electrical",
                        totalMarks: 100,
                        date: "2024-01-18"
                    }
                ];

                // Initialize page
                document.addEventListener('DOMContentLoaded', function () {
                    displayResultsCards();
                    displayResultsTable();
                    updateStats();
                    setupFilters();
                });

                function displayResultsCards() {
                    const container = document.getElementById('resultsCards');
                    container.innerHTML = '';

                    results.slice(0, 6).forEach(result => {
                        const percentage = ((result.marks / result.totalMarks) * 100).toFixed(1);
                        const card = `
                <div class="col-md-4 mb-3">
                    <div class="card result-card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h6 class="card-title mb-0">${result.studentName}</h6>
                                <span class="badge grade-${result.grade.toLowerCase()}">${result.grade}</span>
                            </div>
                            <p class="text-muted small mb-2">${result.exam} - ${result.subject}</p>
                            <div class="row text-center">
                                <div class="col-6">
                                    <h5 class="text-primary mb-0">${result.marks}/${result.totalMarks}</h5>
                                    <small class="text-muted">Marks</small>
                                </div>
                                <div class="col-6">
                                    <h5 class="text-success mb-0">${percentage}%</h5>
                                    <small class="text-muted">Percentage</small>
                                </div>
                            </div>
                            <div class="mt-3">
                                <small class="text-muted">Roll No: ${result.rollNo}</small><br>
                                <small class="text-muted">Date: ${formatDate(result.date)}</small>
                            </div>
                        </div>
                    </div>
                </div>
            `;
                        container.innerHTML += card;
                    });
                }

                function displayResultsTable() {
                    const tbody = document.getElementById('resultsTable');
                    tbody.innerHTML = '';

                    results.forEach(result => {
                        const percentage = ((result.marks / result.totalMarks) * 100).toFixed(1);
                        const row = `
                <tr>
                    <td>${result.rollNo}</td>
                    <td>${result.studentName}</td>
                    <td>${result.exam}</td>
                    <td>${result.subject}</td>
                    <td>
                        <span class="fw-bold">${result.marks}/${result.totalMarks}</span>
                        <br><small class="text-muted">${percentage}%</small>
                    </td>
                    <td><span class="badge grade-${result.grade.toLowerCase()}">${result.grade}</span></td>
                    <td>${formatDate(result.date)}</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary me-1" onclick="viewResult(${result.id})">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-warning me-1" onclick="editResult(${result.id})">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" onclick="deleteResult(${result.id})">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                </tr>
            `;
                        tbody.innerHTML += row;
                    });
                }

                function updateStats() {
                    const totalExams = exams.length;
                    const totalResults = results.length;
                    const avgScore = (results.reduce((sum, result) => sum + (result.marks / result.totalMarks * 100), 0) / results.length).toFixed(1);
                    const passRate = ((results.filter(result => result.grade !== 'F').length / results.length) * 100).toFixed(0);

                    document.getElementById('totalExams').textContent = totalExams;
                    document.getElementById('totalResults').textContent = totalResults;
                    document.getElementById('avgScore').textContent = avgScore + '%';
                    document.getElementById('passRate').textContent = passRate + '%';
                }

                function setupFilters() {
                    const examTypeFilter = document.getElementById('examTypeFilter');
                    const departmentFilter = document.getElementById('departmentFilter');
                    const gradeFilter = document.getElementById('gradeFilter');
                    const searchInput = document.getElementById('searchInput');

                    [examTypeFilter, departmentFilter, gradeFilter, searchInput].forEach(filter => {
                        filter.addEventListener('change', filterResults);
                        filter.addEventListener('input', filterResults);
                    });
                }

                function filterResults() {
                    const examType = document.getElementById('examTypeFilter').value;
                    const department = document.getElementById('departmentFilter').value;
                    const grade = document.getElementById('gradeFilter').value;
                    const search = document.getElementById('searchInput').value.toLowerCase();

                    const filteredResults = results.filter(result => {
                        const matchesExamType = !examType || result.exam.includes(examType);
                        const matchesDepartment = !department || result.department === department;
                        const matchesGrade = !grade || result.grade === grade;
                        const matchesSearch = !search ||
                            result.studentName.toLowerCase().includes(search) ||
                            result.rollNo.toLowerCase().includes(search) ||
                            result.subject.toLowerCase().includes(search);

                        return matchesExamType && matchesDepartment && matchesGrade && matchesSearch;
                    });

                    displayFilteredResults(filteredResults);
                }

                function displayFilteredResults(filteredResults) {
                    const tbody = document.getElementById('resultsTable');
                    tbody.innerHTML = '';

                    filteredResults.forEach(result => {
                        const percentage = ((result.marks / result.totalMarks) * 100).toFixed(1);
                        const row = `
                <tr>
                    <td>${result.rollNo}</td>
                    <td>${result.studentName}</td>
                    <td>${result.exam}</td>
                    <td>${result.subject}</td>
                    <td>
                        <span class="fw-bold">${result.marks}/${result.totalMarks}</span>
                        <br><small class="text-muted">${percentage}%</small>
                    </td>
                    <td><span class="badge grade-${result.grade.toLowerCase()}">${result.grade}</span></td>
                    <td>${formatDate(result.date)}</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary me-1" onclick="viewResult(${result.id})">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-warning me-1" onclick="editResult(${result.id})">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" onclick="deleteResult(${result.id})">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                </tr>
            `;
                        tbody.innerHTML += row;
                    });
                }

                function addExam() {
                    const form = document.getElementById('addExamForm');
                    const formData = new FormData(form);

                    const exam = {
                        id: exams.length + 1,
                        name: document.getElementById('examName').value,
                        type: document.getElementById('examType').value,
                        subject: document.getElementById('examSubject').value,
                        department: document.getElementById('examDepartment').value,
                        totalMarks: parseInt(document.getElementById('totalMarks').value),
                        date: document.getElementById('examDate').value,
                        description: document.getElementById('examDescription').value
                    };

                    exams.push(exam);
                    updateStats();

                    // Close modal and reset form
                    const modal = bootstrap.Modal.getInstance(document.getElementById('addExamModal'));
                    modal.hide();
                    form.reset();

                    alert('Exam added successfully!');
                }

                function addResult() {
                    const form = document.getElementById('addResultForm');

                    const result = {
                        id: results.length + 1,
                        rollNo: document.getElementById('studentRollNo').value,
                        studentName: document.getElementById('studentName').value,
                        exam: document.getElementById('resultExam').value,
                        subject: document.getElementById('resultSubject').value,
                        marks: parseInt(document.getElementById('marksObtained').value),
                        totalMarks: parseInt(document.getElementById('totalMarksResult').value),
                        grade: document.getElementById('resultGrade').value,
                        date: document.getElementById('resultDate').value,
                        department: "Computer Science", // Default for demo
                        remarks: document.getElementById('resultRemarks').value
                    };

                    results.push(result);
                    displayResultsCards();
                    displayResultsTable();
                    updateStats();

                    // Close modal and reset form
                    const modal = bootstrap.Modal.getInstance(document.getElementById('addResultModal'));
                    modal.hide();
                    form.reset();

                    alert('Result added successfully!');
                }

                function viewResult(id) {
                    const result = results.find(r => r.id === id);
                    if (result) {
                        const percentage = ((result.marks / result.totalMarks) * 100).toFixed(1);
                        alert(`Result Details:\nStudent: ${result.studentName}\nExam: ${result.exam}\nSubject: ${result.subject}\nMarks: ${result.marks}/${result.totalMarks} (${percentage}%)\nGrade: ${result.grade}\nDate: ${formatDate(result.date)}`);
                    }
                }

                function editResult(id) {
                    alert('Edit functionality will be implemented here');
                }

                function deleteResult(id) {
                    if (confirm('Are you sure you want to delete this result?')) {
                        const index = results.findIndex(r => r.id === id);
                        if (index > -1) {
                            results.splice(index, 1);
                            displayResultsCards();
                            displayResultsTable();
                            updateStats();
                            alert('Result deleted successfully!');
                        }
                    }
                }

                function formatDate(dateString) {
                    const date = new Date(dateString);
                    return date.toLocaleDateString();
                }
            </script>
            <script src="../../assets/js/common.js"></script>
        </asp:ContentPlaceHolder>
    </div>
</body>
</html>
